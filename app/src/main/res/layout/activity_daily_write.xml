<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DailyWriteActivity">

    <!--TODO toolbar은 이 coordinat-에서 빠져야..? 없어지지 않는 고정 이므로  ++ include? fragment-->
    <FrameLayout
        android:id="@+id/appbarFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"

        />

    <ScrollView
        style="@style/scroll_custom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <!--FIXME 스크롤바 세로 길이는 커스텀이 어려움 -> 페이지 양에 따라 비율로 자동 설정되기 때문에 && 항시 노출을 원하는 것이 맞는지-->
        <!--TODO 스크롤 바 옆의 텍스트 풍선-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textDate"
                    style="@style/Text_H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023년 2월 2일" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:background="@null"
                    android:maxWidth="24dp"
                    android:maxHeight="24dp"
                    android:src="@drawable/ic_calendar" />

            </LinearLayout>

            <TextView
                android:id="@+id/textNth"
                style="@style/Text_H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:text="첫번째 기록" />

            <TextView
                style="@style/Text_H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="54dp"
                android:text="오늘의 푸다를 기록해보세요!" />

            <TextView
                style="@style/Text_H4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:text="오늘의 사진 선택하기" />

            <TextView
                style="@style/Text_H7"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginBottom="30dp"
                android:text="오늘의 식사가 담긴 사진을 선택해 보세요." />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="21dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/imageLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>

                    <!--FIXME 버튼 디자인 없어서 임의로 진행-->
                    <ImageButton
                        android:id="@+id/imageAddButton"
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_7"
                        android:backgroundTint="@color/Beige2"
                        app:srcCompat="@drawable/ic_write" />


                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="32dp"
                android:background="#f4f4f4" />

            <TextView
                style="@style/Text_H4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:text="시간 선택하기" />

            <TextView
