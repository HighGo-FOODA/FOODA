<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DailyWriteActivity">

    <!--TODO toolbar은 이 coordinat-에서 빠져야..? 없어지지 않는 고정 이므로  ++ include? fragment-->
    <FrameLayout
        android:id="@+id/appbarFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp" />

    <ScrollView
        style="@style/scroll_custom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <!--FIXME 스크롤바 세로 길이는 커스텀이 어려움 -> 페이지 양에 따라 비율로 자동 설정되기 때문에 && 항시 노출을 원하는 것이 맞는지-->
        <!--TODO 스크롤 바 옆의 텍스트 풍선-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textDate"
                    style="@style/Text_H2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2023년 2월 2일" />

                <ImageButton
                    android:id="@+id/datepick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:background="@null"
                    android:maxWidth="24dp"
                    android:maxHeight="24dp"
                    android:src="@drawable/ic_calendar"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <TextView
                style="@style/Text_H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="54dp"
                android:text="당신의 하루를 기록해보세요!" />

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-25dp"
                android:background="@drawable/overallreview_write_rectanglebox"
                android:orientation="vertical">

                <TextView
                    style="@style/Text_H4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:text="오늘의 기분온도를 체크해보세요" />

                <TextView
                    style="@style/Text_H7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="30dp"
                    android:text="오늘 느낌 감정의 정도만큼 움직여보세요."
                    android:textColor="#FFACACAC" />

            </LinearLayout>

            <!--seekbar-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="31dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/customSeekBar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0" />

                <SeekBar
                    android:id="@+id/customSeekBar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/seekbar_progress_2_happy"
                    android:thumb="@drawable/seekbar_thumb_happy0" />

                <SeekBar
                    android:id="@+id/customSeekBar3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp"
                    android:max="100"
                    android:progress="0" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp"
                    android:max="100"
                    android:progress="0" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp"
                    android:max="100"
                    android:progress="0" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="32dp"
                android:background="#f4f4f4" />

            <TextView
                style="@style/Text_H4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:text="오늘의 이야기를 기록해보아요!" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="20dp">

                <EditText
                    style="@style/Text_H6"
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:background="@drawable/rounded_7"
                    android:backgroundTint="@color/Beige1"
                    android:gravity="top"
                    android:hint="자유롭게 기록해주세요."
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp"
                    android:textColorHint="@color/Beige3" />

                <!--TODO 커스텀 해서 따로 xml 파일로 만들기-->
                <ProgressBar
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="9dp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/openAll"
            style="@style/Text_H6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:text="공개"
            android:thumb="@drawable/switch_thumb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:switchMinWidth="0dp"
            app:thumbTextPadding="24dp"
            app:track="@drawable/switch_track" />

        <TextView
            style="@style/Text_H6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:text="임시저장"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>